<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"
                tools:context="kristijandelivuk.com.nadjiprijevoz.Screens.LoginActivity">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textSize="@dimen/text_size"
        android:id="@+id/editUsername"
        android:ems="10"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textSize="@dimen/text_size"
        android:id="@+id/editPassword"
        android:ems="10"
        android:layout_below="@+id/editUsername"
        android:layout_alignStart="@+id/editUsername"
        android:textColor="#ffffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="NaÄ‘i prijevoz"
        android:id="@+id/titleLabel"
        android:layout_marginTop="60dp"
        android:textSize="@dimen/text_header_size"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Aplikacija za pronalazak jeftinog prijevoza"
        android:id="@+id/subtitleLabel"
        android:textSize="@dimen/text_subheader_size"
        android:layout_below="@+id/titleLabel"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prijavi se"
        android:id="@+id/loginButton"
        android:textSize="@dimen/text_size"
        android:layout_above="@+id/buttonRegister"
        android:layout_alignLeft="@+id/titleLabel"
        android:layout_alignEnd="@+id/buttonRegister"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registriraj se"
        android:textSize="@dimen/text_size"
        android:id="@+id/buttonRegister"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/titleLabel"
        android:layout_marginBottom="35dp"/>

</RelativeLayout>
