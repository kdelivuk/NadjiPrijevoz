<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                tools:context="kristijandelivuk.com.nadjiprijevoz.Screens.RegisterActivity">


    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:textSize="@dimen/text_size"
        android:background="@drawable/primary_round_alt"
        android:padding="5dp"
        android:textColor="#FFFFFF"
        android:translationZ="1dp"
        android:elevation="1dp"
        android:text="Registriraj se"/>

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonRegister"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:ems="10"
        android:textSize="@dimen/text_size"
        android:inputType="textEmailAddress"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/textEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editEmail"
        android:layout_alignStart="@+id/editEmail"
        android:text="email"
        android:textSize="@dimen/text_size"
        android:textColor="#FFFFFF"/>

    <EditText
        android:id="@+id/editPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textEmail"
        android:layout_alignStart="@+id/textEmail"
        android:ems="10"
        android:textSize="@dimen/text_size"
        android:inputType="phone"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/textPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editPhone"
        android:layout_alignStart="@+id/editPhone"
        android:textSize="@dimen/text_size"
        android:text="telefon"
        android:textColor="#FFFFFF"/>

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textPhone"
        android:layout_alignStart="@+id/textPhone"
        android:ems="10"
        android:textSize="@dimen/text_size"
        android:inputType="textPassword"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/textPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size"
        android:layout_above="@+id/editPassword"
        android:layout_alignStart="@+id/editPassword"
        android:text="lozinka"
        android:textColor="#FFFFFF"/>

    <EditText
        android:id="@+id/editName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textPassword"
        android:layout_alignStart="@+id/textPassword"
        android:ems="10"
        android:textSize="@dimen/text_size"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editName"
        android:textSize="@dimen/text_size"
        android:layout_alignStart="@+id/editName"
        android:text="ime"
        android:textColor="#FFFFFF"/>

    <EditText
        android:id="@+id/editSurname"
        android:layout_width="wrap_content"
        android:textSize="@dimen/text_size"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textName"
        android:layout_alignStart="@+id/textName"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/textSurname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size"
        android:layout_above="@+id/editSurname"
        android:layout_alignStart="@+id/editSurname"
        android:text="prezime"
        android:textColor="#FFFFFF"/>


</RelativeLayout>
