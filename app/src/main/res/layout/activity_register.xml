<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#81C784"
                tools:context="kristijandelivuk.com.nadjiprijevoz.Screens.RegisterActivity">


    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="Register"/>

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonRegister"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/textEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editEmail"
        android:layout_alignStart="@+id/editEmail"
        android:text="email"
        android:textColor="#FFFFFF"/>

    <EditText
        android:id="@+id/editPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textEmail"
        android:layout_alignStart="@+id/textEmail"
        android:ems="10"
        android:inputType="phone"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/textPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editPhone"
        android:layout_alignStart="@+id/editPhone"
        android:text="phone"
        android:textColor="#FFFFFF"/>

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textPhone"
        android:layout_alignStart="@+id/textPhone"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/textPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editPassword"
        android:layout_alignStart="@+id/editPassword"
        android:text="password"
        android:textColor="#FFFFFF"/>

    <EditText
        android:id="@+id/editName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textPassword"
        android:layout_alignStart="@+id/textPassword"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/textNameAndSurname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editName"
        android:layout_alignStart="@+id/editName"
        android:text="name"
        android:textColor="#FFFFFF"/>

    <EditText
        android:id="@+id/editSurname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textNameAndSurname"
        android:layout_alignStart="@+id/textNameAndSurname"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/textSurname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editSurname"
        android:layout_alignStart="@+id/editSurname"
        android:text="surname"
        android:textColor="#FFFFFF"/>
</RelativeLayout>
