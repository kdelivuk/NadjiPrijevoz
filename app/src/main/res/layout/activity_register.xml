<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#81C784"
                tools:context="kristijandelivuk.com.nadjiprijevoz.RegisterActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/buttonRegister"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editEmail"
        android:textColor="#FFFFFF"
        android:layout_above="@+id/buttonRegister"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email"
        android:id="@+id/textEmail"
        android:textColor="#FFFFFF"
        android:layout_above="@+id/editEmail"
        android:layout_alignStart="@+id/editEmail"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/editPhone"
        android:textColor="#FFFFFF"
        android:layout_above="@+id/textEmail"
        android:layout_alignStart="@+id/textEmail"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="phone"
        android:id="@+id/textPhone"
        android:textColor="#FFFFFF"
        android:layout_above="@+id/editPhone"
        android:layout_alignStart="@+id/editPhone"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editPassword"
        android:textColor="#FFFFFF"
        android:layout_above="@+id/textPhone"
        android:layout_alignStart="@+id/textPhone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="password"
        android:id="@+id/textPassword"
        android:textColor="#FFFFFF"
        android:layout_above="@+id/editPassword"
        android:layout_alignStart="@+id/editPassword"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editName"
        android:textColor="#FFFFFF"
        android:layout_above="@+id/textPassword"
        android:layout_alignStart="@+id/textPassword"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:id="@+id/textName"
        android:textColor="#FFFFFF"
        android:layout_above="@+id/editName"
        android:layout_alignStart="@+id/editName"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editSurname"
        android:textColor="#FFFFFF"
        android:layout_above="@+id/textName"
        android:layout_alignStart="@+id/textName"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="surname"
        android:id="@+id/textSurname"
        android:textColor="#FFFFFF"
        android:layout_above="@+id/editSurname"
        android:layout_alignStart="@+id/editSurname"/>
</RelativeLayout>
